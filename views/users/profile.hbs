<h1>Profile</h1>
<p>Please modify your profile details using the form below</p>
{{#if errors}}
	<div class="errors">
		{{#each errors}}
		    <p class="alert alert-danger">{{this.msg}}</p>
		{{/each}}	
	</div>
{{/if}}
{{#if user}}
<div class="col-xs-6">
	<form action="/users/profile" method="post" enctype="multipart/form-data">
		<div class="form-group">
			<input type="hidden" class="form-control" name="oldname" value="{{user.username}}" readonly>
			<label for="email">enter new email</label>
			<input type="text" class="form-control" name="email" placeholder="new email">
			<label for="name">enter new name</label>
			<input type="text" class="form-control" name="name" placeholder="new name">
			<label for="profileimage">profile image</label>
			<input type="file" class="form-control" name="profileimage">
			<br>
			<input type="submit" class="btn btn-default" name="submit" value="modify">
		</div>
	</form>
</div>
<div class="col-xs-6">
	{{>userDetails}}	
</div>
{{/if}}
