<h1>Change password</h1>
<p>Please change your password using the form below</p>
{{#if errors}}
	<div class="errors">
		{{#each errors}}
		    <p class="alert alert-danger">{{this.msg}}</p>
		{{/each}}	
	</div>
{{/if}}
{{#if user}}
	<div class="col-xs-6">
		<form action="/users/admin" method="post" enctype="multipart/form-data">
			<div class="form-group">
				<label for="opassword">enter old password</label>
				<input type="text" class="form-control" name="opassword" placeholder="enter old password">
				<label for="password">enter new password</label>
				<input type="password" class="form-control" name="password" placeholder="enter new password">
				<label for="password2">confirm new password</label>
				<input type="password" class="form-control" name="password2" placeholder="confirm new password">
				<br>
				<input type="submit" class="btn btn-default" name="submit" value="update">
			</div>
		</form>
	</div>
	<div class="col-xs-6">
		{{>userDetails}}	
	</div>
{{/if}}
